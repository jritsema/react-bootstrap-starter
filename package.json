{
  "name": "react-bootstrap-starter",
  "version": "1.0.0",
  "description": "A basic starting template for a react.js app that uses bootstrap components, a simple data driven ui router and menu component, along with a build system",
  "main": "",
  "scripts": {
    "build": "browserify src/App.jsx > public/bundle.js",
    "build-prod": "NODE_ENV=production browserify src/App.jsx | uglifyjs -cm > public/bundle.js",
    "watch": "nodemon --exec npm run build -e jsx"
  },
  "author": "John Ritsema",
  "license": "MIT",
  "dependencies": {
    "react": "^0.13.3",
    "react-bootstrap": "^0.25.2"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^11.2.0",
    "nodemon": "^1.4.0",
    "uglify-js": "^2.4.24"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
